
public class Ecrire {
	public static void main(String[] args)
    {
      try
       {
         FileWriter fw=new FileWriter("c:\\temp\\essai.txt");
         BufferedWriter bw= new BufferedWriter(fw);
         bw.write("Ceci est mon fichier");
         bw.newLine();
         bw.write("Il est à moi...");
         bw.close();
        }
      catch (Exception e)
       { System.out.println("Erreur "+e);}
}
}
